#!/bin/bash

FG="#de8221" #orange
#FG="#87ceeb" #blue
BG="#222222"
FN="-*-fixed-medium-r-*-*-18-*-*-*-*-*-iso8859-*"
#FN="-*-bitstream vera sans mono-medium-r-*-*-15-*-*-*-*-*-*-*"

export PATH="$PATH:$HOME/bin"
export DZEN_OPTS="-h 24 -fg $FG -bg $BG -fn $FN"
export DMENU_OPTS="-b -i -nf $FG -nb $BG -sf black -sb $FG -fn $FN"
export NTIMER=`mktemp`
export AWT_TOOLKIT="MToolkit"
export OOO_FORCE_DESKTOP=gnome

stalonetray &
#mpd 2>/dev/null &
#mpdscribble &
gnome-settings-daemon &
gnome-power-manager &
gnome-screensaver &
update-notifier &
#nm-applet &
xmodmap $HOME/.xmodmaprc
xsetroot -cursor_name left_ptr
xsetroot -solid '#000000'
xbindkeys &
gnome-do &
xcompmgr -nFf -I 0.056 -O 0.06 &

xset b off
xset m 6 4
xrdb -merge $HOME/.Xresources
sb_load-date-time 1535 0 375 &
sb_music 1890 0 30 &

xmonad &
wait $!
pkill -HUP dzen2
